% --- Page Numbering (Fancyhdr) ---
% Initially disable, but provide commands to enable with footer info.

\RequirePackage{fancyhdr}
\pagestyle{empty} % Start with no page numbers.  Good for title page.

\newcommand{\setpagefooter}[2]{%  #1 = word count, #2 = author
  \pagestyle{fancy}
  \fancyhf{} % Clear all header and footer fields
  \fancyfoot[L]{Word count: #1}
  \fancyfoot[C]{\thepage}
  \fancyfoot[R]{by #2}
}

